# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.scss]
indent_size = 2
indent_style = space

[*.json]
indent_size = 4
indent_style = space
